<?xml version="1.0"?>
<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Config/etc/view.xsd">
    <media>
        <images module="Magento_Catalog">
            <image id="product_page_main_image_default" type="image">
                <width>1000</width>
                <height>800</height>
            </image>
            <image id="product_page_image_small" type="image">
                <width>100</width>
                <height>100</height>
            </image>
            <image id="custom_product_image_role" type="image">
                <width>800</width>
                <height>800</height>
            </image>
            <image id="category_page_grid-1" type="small_image">
                <width>500</width>
                <height>500</height>
            </image>
        </images>
    </media>

    <vars module="Magento_Catalog">
        <var name="gallery">
            <var name="navdir">vertical</var>
        </var>
    </vars>
</view>
